<Window x:Class="WpfApplication1.DemoDataGrid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="DemoDataGrid" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dataGrid" Grid.ColumnSpan="2"/>
        <Button x:Name="btnCol3" Content="Col3" HorizontalAlignment="Left" Margin="48,5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="btnCol3_Click"/>
        <Button x:Name="butCol4" Content="Col4" Grid.Column="1" HorizontalAlignment="Left" Margin="33,5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="butCol4_Click"/>

    </Grid>
</Window>
